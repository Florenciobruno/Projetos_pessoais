print("Olá!")
nome = input ("Digite seu nome:")
peso = float(input("Qual o seu peso: "))
altura = float(input("Digite sua altura em metros): "))
IMC = (peso / altura**2)
print("seu IMC é: " )
print (f" {IMC:4.2f}")

if IMC < 17.0:
	   print ("Você está muito abaixo do peso")
	  
elif  IMC<=18.49:
	print("Você está abaixo do peso")
	
elif  IMC<=24.99:
	print("Você está com peso normal")
	
	
elif  IMC<= 29.99:
	print("Você está acima do peso")
	
	
elif IMC<=34.99:
	print("Você está com obesidade I")
	
elif IMC<= 39.99:
	print("Você está com obesidade II")
	
elif IMC >40.00:
	print("Você está com obesidade mórbida III")
	
print("Abaixo de 17         	Muito abaixo do peso")
print("Entre 17 e 18,49   	Abaixo do peso")
print("Entre 18,5 e 24,99	Peso normal")
print("Entre 25 e 29,99   	Acima do peso")
print("Entre 30 e 34,99	   Obesidade I")
print("Entre 35 e 39,99   	Obesidade II severa")
print("Acima de 40     Obesidade III mórbida'")


   


print( "Para mais informacōes consulte o site oficial do ministerio da saude em:")

print('https://www.gov.br/saude/pt-br')
   


print( "Para mais informacōes consulte o site do ministerio da saude")

